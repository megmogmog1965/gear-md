{
  "name": "gear-md",
  "version": "1.0.2",
  "description": "Json/Yaml to Markdown converter for GEAR.indigo.",
  "repository": {
    "type": "git",
    "url": "https://github.com/megmogmog1965/gear-md.git"
  },
  "type": "module",
  "main": "./src/index.js",
  "bin": {
    "gear-md": "src/index.ts"
  },
  "scripts": {
    "dev": "npm run build && tsx src/index.ts",
    "build": "npm run lint && npm run tsc",
    "lint": "eslint",
    "tsc": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage"
  },
  "author": "megmogmog1965",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.5.4",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^22.5.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.9.1",
    "globals": "^15.11.0",
    "tsx": "^4.19.1",
    "typescript-eslint": "^8.3.0",
    "vitest": "^2.0.5"
  },
  "volta": {
    "node": "18.20.4"
  }
}
